<div class="cmp-heading {{#if heading-p0}}p-0{{else}}pb-3 pb-lg-4{{/if}}">
  <div class="row">
    <div class="col-lg-8">
      {{#if h2}}
        <h2 class="title-xxxlarge {{title-class}}">{{title}}</h2>
      {{else}}
        <h1 class="title-xxxlarge {{title-class}}" data-element="service-title">{{title}}</h1>
      {{/if}}

      {{#if label-tag-up}}
        <div class="d-flex flex-wrap cmp-heading__tag">
          <div class="cmp-tag">
            <span class="cmp-tag__tag title-xsmall text-decoration-none text-button">Servizio attivo</span>
          </div>
        </div>
      {{/if}}

      {{#if subTitle}}
        <p class="subtitle-small {{pClass}}">{{{subTitle}}}</p>
      {{/if}}

      {{#if description}}
        <p class="subtitle-small {{desClass}}" data-element="service-description">{{{description}}}</p>
      {{/if}}

      {{#if button}}
        {{>partials/button/button class="fw-bold"}}
      {{/if}}
    </div>
    <div class="col-lg-3 offset-lg-1 mt-5 mt-lg-0">
      <div class="dropdown">
        <button aria-label="condividi sui social" class="btn btn-dropdown dropdown-toggle" type="button"
          id="shareActions" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <svg class="icon">
            <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-share"></use>
          </svg>
          <small>Condividi</small>
        </button>
        <div class="dropdown-menu shadow-lg" aria-labelledby="shareActions">
          <div class="link-list-wrapper">
            <ul class="link-list">
              <li>
                <a class="list-item" href="#" aria-label="facebook" title="facebook">
                  <svg class="icon">
                    <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-facebook"></use>
                  </svg>
                  <span>Facebook</span>
                </a>
              </li>
              <li>
                <a class="list-item" href="#" aria-label="twitter" title="twitter">
                  <svg class="icon">
                    <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-twitter"></use>
                  </svg>
                  <span>Twitter</span>
                </a>
              </li>
              <li>
                <a class="list-item" href="#" aria-label="linkedin" title="linkedin">
                  <svg class="icon">
                    <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-linkedin"></use>
                  </svg>
                  <span>Linkedin</span>
                </a>
              </li>
              <li>
                <a class="list-item" href="#" aria-label="whatsapp" title="whatsapp">
                  <svg class="icon">
                    <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-whatsapp"></use>
                  </svg>
                  <span>Whatsapp</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="dropdown">
        <button aria-label="vedi azioni da compiere sulla pagina" class="btn btn-dropdown dropdown-toggle" type="button"
          id="viewActions" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <svg class="icon">
            <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-more-items"></use>
          </svg>
          <small>Vedi azioni</small>
        </button>
        <div class="dropdown-menu shadow-lg" aria-labelledby="viewActions">
          <div class="link-list-wrapper">
            <ul class="link-list">
              <li>
                <a class="list-item" href="#" aria-label="Scarica notizia" title="Scarica notizia">
                  <svg class="icon">
                    <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-download"></use>
                  </svg>
                  <span>Scarica</span>
                </a>
              </li>
              <li>
                <a class="list-item" href="#" aria-label="Stampa notizia" title="Stampa notizia">
                  <svg class="icon">
                    <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-print"></use>
                  </svg>
                  <span>Stampa</span>
                </a>
              </li>
              <li>
                <a class="list-item" href="#" aria-label="Ascolta notizia" title="Ascolta notizia">
                  <svg class="icon">
                    <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-hearing"></use>
                  </svg>
                  <span>Ascolta</span>
                </a>
              </li>
              <li>
                <a class="list-item" href="#" aria-label="Invia notizia" title="Invia notizia">
                  <svg class="icon">
                    <use xlink:href="../assets/bootstrap-italia/dist/svg/sprite.svg#it-mail"></use>
                  </svg>
                  <span>Invia</span>
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <div class="mt-4 mb-4">
        <span class="subtitle-small">Argomenti</span>
        <div class="chip-wrapper mt-2">
          <a href="#" aria-label="Vai all'argomento Famiglia" title="Vai all'argomento Famiglia"
            data-element="service-topic">
            <div class="chip chip-simple chip-primary">
              <span class="chip-label">Famiglia</span>
            </div>
          </a>
          <a href="#" aria-label="Vai all'argomento Servizi e supporto all'educazione"
            title="Vai all'argomento Servizi e supporto all'educazione" data-element="service-topic">
            <div class="chip chip-simple chip-primary">
              <span class="chip-label">Servizi e supporto all'educazione</span>
            </div>
          </a>
          <a href="#" aria-label="Vai all'argomento Bambini e ragazzi" title="Vai all'argomento Bambini e ragazzi"
            data-element="service-topic">
            <div class="chip chip-simple chip-primary">
              <span class="chip-label">Bambini e ragazzi</span>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>