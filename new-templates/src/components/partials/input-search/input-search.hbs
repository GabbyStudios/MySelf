<div class="cmp-input-search">
  <div class="form-group autocomplete-wrapper {{wrapper-class}}">
  <label for="{{id}}" class="{{#if label-visible}}label-visible{{else}}visually-hidden{{/if}}">{{label-text}}</label>
  <input type="search" class="autocomplete" placeholder="{{placeholder-text}}"
    id="{{id}}"
    name="{{id}}"
    data-bs-autocomplete="[]">
  <span class="autocomplete-icon" aria-hidden="true">
    <svg class="icon icon-sm {{icon-class}}"><use href="./assets/bootstrap-italia/dist/svg/sprite.svg#it-search"></use></svg>
  </span>

    {{#if search-subtitle}}
      <p id="autocomplete-label" class="{{text-subtitle-class}}">{{{text-subtitle}}}</p>
    {{/if}}
  </div>
</div>
