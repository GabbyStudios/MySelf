<aside class="cmp-navscroll sticky-top" aria-labelledby="accordion-title-{{id}}">
  <div class="inline-menu">
    <div class="link-list-wrapper">
      <ul>
        <li>
          <a class="list-item large medium right-icon p-0 text-decoration-none" href="#collapse-{{id}}"
            data-bs-toggle="collapse" aria-expanded="true" aria-controls="collapse-{{id}}" data-focus-mouse="true"
            aria-label="Apri e chiudi il menù {{accordion-title}}" title="Apri e chiudi il menù {{accordion-title}}">
            <span class="list-item-title-icon-wrapper pb-10 px-3">
              <span id="accordion-title-{{id}}" class="title-xsmall-semi-bold">{{accordion-title}}</span>
              <svg class="icon icon-xs right">
                <use href="./assets/bootstrap-italia/dist/svg/sprite.svg#it-expand"></use>
              </svg>
            </span>
            <!-- Progress Bar -->
            <div class="progress bg-light">
              <div class="progress-bar" role="progressbar" aria-label="Progress bar dell'indice della pagina"
                style="width: 15%" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
          </a>
          <ul class="link-sublist collapse show" id="collapse-{{id}}" data-element="page-index">
            {{#each link-list as |link| }}
            <li>
              <a class="list-item" href="#{{link.anchor}}" aria-label="Vai alla sezione {{link.item}}"
                title="Vai alla sezione {{link.item}}">
                <span class="title-medium">{{link.item}}</span>
              </a>
            </li>
            {{/each}}
          </ul>
        </li>
      </ul>
    </div>
  </div>
</aside>