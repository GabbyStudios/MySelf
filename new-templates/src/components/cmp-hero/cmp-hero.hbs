<div class="cmp-hero">
  <section class="it-hero-wrapper bg-white align-items-start">
    <div class="it-hero-text-wrapper {{wrapper-class}}">
      {{#if icon}}
        <div class="categoryicon-top d-flex">
          <svg class="icon icon-success {{iconClass}}">
            <use href="../assets/bootstrap-italia/dist/svg/sprite.svg#{{icon}}"></use>
          </svg>
          <h1 class="text-black hero-title" data-element="page-name">{{hero-title}}</h1>
        </div>
      {{else}}
        <h1 class="text-black hero-title" data-element="page-name">{{{hero-title}}}</h1>
      {{/if}}

      {{#if hero-text}}
      <p class="titillium hero-text">{{{hero-text}}}</p>
      {{/if}}
    </div>
  </section>
</div>