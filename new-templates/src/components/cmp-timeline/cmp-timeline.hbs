<div class="cmp-timeline">
  <h2 class="title-xxlarge mb-3 mb-lg-4" id="{{id-title}}">{{title}}</h2>
  {{#if description}}
    <p class="text-paragraph mb-3">{{description}}</p>
  {{/if}}
  <div class="calendar-vertical mb-3">
    {{#each timeline as |date|}}
      <div class="calendar-date">
          <div class="calendar-date-day">
            <small>{{date.year}}</small>
            <span class="title-xxlarge-regular">{{date.day}}</span>
            <small>{{date.month}}</small>
          </div><!-- /calendar-date-day -->
          <div class="calendar-date-description rounded">
            <div class="calendar-date-description-content">
              <h3 class="text-purplelight title-medium-2 mb-0">{{date.event}}</h3>
                {{#if date.info}}
                <p class="info-text">{{date.info}}</p>
              {{/if}}
            </div><!-- /calendar-date-description-content -->
          </div><!-- /calendar-date-description -->
        </div><!-- /calendar-date -->
    {{/each}}

  </div>
  {{#if label}}
    <p class="section-reques__status mt-4 mt-lg-40 text-paragraph">{{{label}}}</p>
  {{/if}}
</div>
