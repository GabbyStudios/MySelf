{{#>cmp-modal/cmp-modal-structure id="modal-bank-account" modalTitle="Conto bancario per l’accredito" buttons=true modalInfo="I campi contraddistinti dal
simbolo asterisco (*) sono obbligatori"}}
<div>
  <form action="" id="contacts-form">
    {{>partials/input/input id="nameSurname" type="text" label="Intestatario" text="Inserisci nome e cognome dell’intestatario" required=true placeholder="Julie Crampton Smith" }}
    {{>partials/input/input id="bank" type="text" label="Istituto di credito" text="Inserisci Istituto di credito" required=true placeholder="Intesa Sanpaolo"}}
    {{>partials/input/input id="branch" type="text" label="Filiale" text="Inserisci filiale" required=true }}
    {{>partials/input/input id="address" type="text" label="Indirizzo istituto" text="Inserisci indirizzo istituto di credito" required=true }}
    {{>partials/input/input id="iban" type="text" label="Iban" text="Inserisci Inserisci iban" required=true placeholder="IT12 3456 7890 123456" }}
    {{>partials/cmp-upload/cmp-upload inputId="doc-id" label="Documento iban" required="true" success="true" document="documento_iban.pdf"}}
  </form>
</div>
