<div class="cmp-nav-tab pl-10 pr-10 mt-2 mb-35 mt-lg-4 mb-lg-50 border-bottom border-light">
  <ul class="nav nav-tabs nav-tabs-icon-text w-100 flex-nowrap" id="myTab" role="tablist">
     {{#each step-list as |tab| }}
    <li class="nav-item w-100 me-2">
      <a class="nav-link {{tab.active}} justify-content-start pr-10 pb-2 ps-1 pe-lg-none pb-lg-15 ps-lg-3 me-lg-5 text-tab" href="#{{tab.id-link}}" title="Vai alla sezione {{tab.title}}" aria-label="Vai alla sezione {{tab.title}}" aria-current="page" aria-controls="{{tab.controls}}" aria-selected="false" data-bs-toggle="tab" role="tab">
        {{#if tab.icon}}
        <svg class="icon me-1 mr-lg-10">
          <use href="./assets/bootstrap-italia/dist/svg/sprite.svg#{{tab.icon-name}}"></use>
        </svg>
        {{/if}}
        {{tab.title}}
      </a>
    </li>
    {{/each}}
  </ul>
</div>