{{#>base/base title="Prenotazioni - Nome del Comune" headerActive3=true}}
<main>
  <div class="container" id="main-container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Prenotazioni"}}
      </div>
    </div>
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-heading/cmp-heading title="Prenotazione appuntamento"}}
      </div>
    </div>
  </div>

  <div class="container">
    {{> cmp-info-progress/cmp-info-progress
    data-progress="1"
    step-list=step-list.prenota-appuntamento-step-1
    step-num="1"
    step-tot="5"
    step-title="Luogo"
    classSubtitle="mt-40 mb-3"
    subtitle="I campi contraddistinti dal simbolo asterisco sono obbligatori"
    }}

    {{> cmp-info-progress/cmp-info-progress
    data-progress="2"
    step-list=step-list.prenota-appuntamento-step-2
    step-num="2"
    step-tot="5"
    step-title="Data e orario"
    classSubtitle="mt-40 mb-3"
    subtitle="I campi contraddistinti dal simbolo asterisco sono obbligatori"
    }}

    {{> cmp-info-progress/cmp-info-progress
    data-progress="3"
    step-list=step-list.prenota-appuntamento-step-3
    step-num="3"
    step-tot="5"
    step-title="Dettagli appuntamento"
    classSubtitle="mt-40 mb-3"
    subtitle="I campi contraddistinti dal simbolo asterisco sono obbligatori"
    }}

    {{> cmp-info-progress/cmp-info-progress
    data-progress="4"
    step-list=step-list.prenota-appuntamento-step-4
    step-num="4"
    step-tot="5"
    step-title="Richiedente"
    classSubtitle="mt-40 mb-3"
    subtitle="I campi contraddistinti dal simbolo asterisco sono obbligatori"
    }}

    {{> cmp-info-progress/cmp-info-progress
    data-progress="5"
    step-list=step-list.prenota-appuntamento-step-5
    step-num="5"
    step-tot="5"
    step-title="Verifica dei dati"
    }}
  </div>

  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-3 mb-4 d-none" data-index="1">
        {{>cmp-navscroll/cmp-navscroll
        accordion-title="INFORMAZIONI RICHIESTE" id="one"
        link-list=link-list.prenota-appuntamento-step-1}}
      </div>
      <div class="col-12 col-lg-3 mb-4 d-none" data-index="2">
        {{>cmp-navscroll/cmp-navscroll
        accordion-title="INFORMAZIONI RICHIESTE" id="one"
        link-list=link-list.prenota-appuntamento-step-2}}
      </div>

      <div class="col-12 col-lg-3 mb-4 d-none" data-index="3">
        {{>cmp-navscroll/cmp-navscroll
        accordion-title="INFORMAZIONI RICHIESTE" id="one"
        link-list=link-list.prenota-appuntamento-step-3}}
      </div>

      <div class="col-12 col-lg-8 offset-lg-1 section-wrapper">
        <div class="sections-content" aria-live="polite">
          <section class="firstStep page-step active" data-steps="1">
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="office"
            bg-grey=true
            h2-class="mb-0"
            card-title="Ufficio"
            subtitle="Scegli l’ufficio a cui vuoi richiedere l’appuntamento"
            }}
            {{>partials/select/select placeholder="Seleziona opzione" id="office-choice" label-text="Tipo di ufficio"
            label-hidden=true class="p-0" select-option-list=ufficio-appuntamento}}
            {{> cmp-info-radio/cmp-info-radio radio=true group="beneficiaries" idRadio="first"
            title="Municipalità 1 - Chiaia, Posillipo, S. Ferdinando"
            info-appointment=inserire-dati-specifici-appuntamento.info
            }}
            {{> cmp-info-radio/cmp-info-radio radio=true group="beneficiaries" idRadio="third"
            title="Municipalità 3 - Stella, S. Carlo all'Arena"
            info-appointment=inserire-dati-specifici-appuntamento.info
            }}
            {{> cmp-info-radio/cmp-info-radio radio=true group="beneficiaries" idRadio="four"
            title="Municipalità 4 - S. Lorenzo, Vicaria, Poggioreale, Zona Industriale"
            info-appointment=inserire-dati-specifici-appuntamento.info
            }}
            {{/cmp-card/cmp-card-content-box}}
          </section>

          <section class="d-none page-step" data-steps="2">
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="appointment-available"
            bg-grey=true
            h2-class="mb-2"
            card-title="Appuntamenti disponibili*"
            margin-class="mb-40"
            }}
            {{>partials/select/select class="p-0 mt-1" id="appointment" label-text="Seleziona un mese" label-hidden=true
            placeholder="Seleziona un mese"
            select-option-list=prenotazione-appuntamento.controllare-dati-personali.appuntamenti-disponibili.select}}

            {{>cmp-card-radio-list/cmp-card-radio-list
            radio-list=prenotazione-appuntamento.controllare-dati-personali.appuntamenti-disponibili.radio-list }}
            {{/cmp-card/cmp-card-content-box}}

            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="office"
            bg-grey=true
            h2-class="mb-0"
            card-title="Ufficio"
            }}

            {{>cmp-info-summary/cmp-info-summary-no-modify
            class="mb-4 mb-lg-30 p-4"
            info-title="Municipalità 1 - Chiaia, Posillipo, S. Ferdinando"
            info=true
            info-list=prenotazione-appuntamento.inserire-dati-specifici-2.list}}

            {{/cmp-card/cmp-card-content-box}}
          </section>

          <section class="d-none page-step" data-steps="3">
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="reason"
            bg-grey=true
            h2-class="mb-0"
            margin-class="mb-40"
            header-class="mb-3"
            card-title="Motivo*"
            subtitle="Scegli il motivo dell’appuntamento"
            }}
            {{>partials/select/select
            placeholder="Seleziona opzione"
            label-hidden=true
            id="motivo-appuntamento"
            label-text="Motivo dell'appuntamento"
            class="p-0"
            select-option-list=motivo-appuntamento}}
            {{/cmp-card/cmp-card-content-box}}


            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="details"
            bg-grey=true
            h2-class="mb-0"
            header-m0=true
            subtitleClass="mb-3"
            card-title="Dettagli*"
            subtitle="Aggiungi ulteriori dettagli"
            }}
            {{> partials/text-area/text-area label="Inserire massimo 200 caratteri" class="p-0" placeholder="Aggiungi
            ulteriori dettagli" id="form-details"}}
            {{/cmp-card/cmp-card-content-box}}
          </section>

          <section class="d-none page-step" data-steps="4">
            <p class="subtitle-small pb-40 mb-0 d-lg-none">Hai un’identità digitale SPID o CIE? <a
                class="title-small-semi-bold t-primary underline" href="./iscrizione-graduatoria-accedere-servizio.html">Accedi</a>
            </p>
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="applicant"
            bg-grey=true
            h2-class="mb-3"
            card-title="Richiedente"
            header-m0=true
            }}
            <div class="form-wrapper bg-white p-4">
              {{>partials/input/input type="text" id="name" label="Nome" required=true name="aname" text="Inserisci il
              tuo nome" formClass="mb-0"}}
              {{>partials/input/input type="text" id="surname" label="Cognome" required=true name="surname"
              text="Inserisci il tuo cognome" formClass="mb-0"}}
              {{>partials/input/input type="email" id="email" label="Email" required=true name="email" text="Inserisci
              la tua email" formClass="mb-0"}}
            </div>
            {{/cmp-card/cmp-card-content-box}}
          </section>

          <section class="d-none page-step" data-steps="5">
            <div class="mt-2">
              <h2 class="visually-hidden">Dettagli dell'appuntamento</h2>
              {{#>cmp-card/cmp-card-content-box
              class="mb-0"
              bg-grey=true
              h2-class="mb-0"
              margin-class="mb-4"
              card-title="Riepilogo" }}

              {{>cmp-info-summary/cmp-info-summary
              class="mb-3 mb-lg-4 p-3 p-lg-4"
              info-title="Ufficio"
              info=true
              info-list=prenota-appuntamento.office
              }}

              {{>cmp-info-summary/cmp-info-summary
              class="mb-3 mb-lg-4 p-3 p-lg-4"
              info-title="Data e orario"
              info=true
              info-list=prenota-appuntamento.date
              }}

              {{>cmp-info-summary/cmp-info-summary
              class="mb-3 mb-lg-4 p-3 p-lg-4"
              info-title="Dettagli appuntamento"
              info=true
              info-list=prenota-appuntamento.appointment-details
              }}

              {{>cmp-info-summary/cmp-info-summary
              class="p-3 p-lg-4 mb-0"
              info-title="Richiedente"
              info=true
              info-list=prenota-appuntamento.applicant
              }}

              {{/cmp-card/cmp-card-content-box}}
            </div>
          </section>
          {{> cmp-nav-steps/cmp-nav-steps saveBtn=true btn-next-step=true
          btn-back-step=true validate=true}}
        </div>
      </div>
    </div>
  </div>


  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row d-flex justify-content-center p-contacts">
        <div class="col-12 col-lg-6">
          {{>cmp-contacts/cmp-contacts-trasversali faq=true assistance=true}}
        </div>
      </div>
    </div>
  </div>

</main>
{{/base/base }}