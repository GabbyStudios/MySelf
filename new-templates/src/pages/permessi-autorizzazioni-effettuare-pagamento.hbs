{{#>base/base title="Permessi e autorizzazioni - Effettuare il pagamento"}}
<main>
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Area personale" link3="Pagamento"}}
        {{>cmp-heading/cmp-heading
        title="Pagamento"
        }}
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-12 col-lg-8 pt-2 pt-lg-100">
        {{#>cmp-card/cmp-card-content-box
        cmpClass="mb-30 mb-lg-40"
        class="mb-0 card-summary-grey"
        bg-grey=true
        card-title="Permesso ZTL"
        }}

        {{>cmp-info-summary/cmp-info-summary
        class="card-summary-inline"
        info=true
        effettuare-pagamento=permessi-autorizzazioni.effettuare-pagamento.pagamento-ztl
        }}

        <div class="bg-white">
          <p class="title-large-semi-bold card-white">Importo pagamento: 16,00 €</p>
        </div>

        {{/cmp-card/cmp-card-content-box}}

        {{#>cmp-text-button/cmp-text-button
        linkLabel="Che cos’è pagoPA"
        sBtn=true
        classLink="u-grey-dark"
        }}
          {{>partials/button/button label="paga con pagoPA" primary=true class="btn-icon btn-re square mb-2"   iconBtnUrl="../images/pagopa.svg"}}
        {{/cmp-text-button/cmp-text-button}}
      </div>
    </div>
  </div>
  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>
</main>
{{/base/base }}
