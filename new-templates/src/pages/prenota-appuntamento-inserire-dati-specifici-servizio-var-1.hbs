{{#>base/base title="Preferenze di Servizio"}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Prenotazioni"}}
        {{> cmp-heading/cmp-heading title="Prenotazione appuntamento" description="Hai bisogno di assistenza? <a href='' class='title-small-semi-bold t-primary'>Contattaci</a>"}}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=step-list.prenota-appuntamento-step-1
        step-num="1"
        step-tot="5"
        step-title="Luogo"
        subtitle="I campi contraddistinti dal simbolo asterisco (*) sono obbligatori"
        }}
      </div>
    </div>

    <div class="row mt-lg-50">
      <div class="col-12 col-lg-3 d-lg-block mb-4 d-none ">
          {{>cmp-navscroll/cmp-navscroll
          accordion-title="INFORMAZIONI RICHIESTE"
          link-list=link-list.prenota-appuntamento-step-1}}
      </div>
      <div class="col-12 col-lg-8 offset-lg-1">
        <div class="steppers-content" aria-live="polite">
          <div>

            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="office"
            bg-grey=true
            h2-class="mb-0"
            card-title="Ufficio"
            subtitle="Scegli l’ufficio a cui vuoi richiedere l’appuntamento"
            }}
            {{>partials/select/select placeholder="Seleziona opzione" class="p-0" select-option-list=ufficio-appuntamento}}
            {{> cmp-info-radio/cmp-info-radio radio=true group="beneficiaries" idRadio="first"
            title="Municipalità 1 - Chiaia, Posillipo, S. Ferdinando"
            info-appointment=inserire-dati-specifici-appuntamento.info
            }}
            {{> cmp-info-radio/cmp-info-radio radio=true group="beneficiaries" idRadio="third"
            title="Municipalità 3 - Stella, S. Carlo all'Arena"
            info-appointment=inserire-dati-specifici-appuntamento.info
            }}
            {{> cmp-info-radio/cmp-info-radio radio=true group="beneficiaries" idRadio="four"
            title="Municipalità 4 - S. Lorenzo, Vicaria, Poggioreale, Zona Industriale"
            info-appointment=inserire-dati-specifici-appuntamento.info
            }}
            {{/cmp-card/cmp-card-content-box}}
          </div>
          {{> cmp-nav-steps/cmp-nav-steps save="true" }}
        </div>
      </div>
    </div>
  </div>


  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row d-flex justify-content-center p-contacts">
        <div class="col-12 col-lg-5">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

</main>
{{/base/base }}
