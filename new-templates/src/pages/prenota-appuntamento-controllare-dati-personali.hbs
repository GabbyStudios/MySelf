{{#>base/base title="Preferenze di Servizio"}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Prenotazioni"}}
        {{> cmp-heading/cmp-heading title="Prenotazione appuntamento"}}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=step-list.prenota-appuntamento-step-4
        step-num="4"
        step-tot="5"
        step-title="Richiedente"
        subtitle="I campi contraddistinti dal simbolo asterisco (*) sono obbligatori"
        }}
      </div>

      <p class="subtitle-small pb-40">Hai un’identità digitale SPID o CIE? <a class="title-small-semi-bold t-primary underline" href="./accedere-servizio.html">Accedi</a></p>
    </div>

    <div class="row mt-lg-50">
      <div class="col-12 col-lg-3 d-lg-block mb-4 d-none ">
          {{>cmp-navscroll/cmp-navscroll
          accordion-title="INFORMAZIONI RICHIESTE"
          link-list=link-list.prenota-appuntamento-step-4}}
      </div>
      <div class="col-12 col-lg-8 offset-lg-1">
        <div class="steppers-content" aria-live="polite">
          <div>

            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="applicant"
            bg-grey=true
            h2-class="mb-3"
            card-title="Richiedente"
            }}
            <div class="form-wrapper bg-white p-4">
              {{>partials/input/input type="text" id="name" label="Nome" required=true name="aname" text="Inserisci il tuo nome" formClass="mb-0"}}
              {{>partials/input/input type="text" id="surname" label="Cognome" required=true name="surname" text="Inserisci il tuo nognome" formClass="mb-0"}}
              {{>partials/input/input type="email" id="email" label="Email" required=true name="email" text="Inserisci la tua email" formClass="mb-0"}}
            </div>

            {{/cmp-card/cmp-card-content-box}}
          </div>
          {{> cmp-nav-steps/cmp-nav-steps save="true"}}
        </div>
      </div>
    </div>
  </div>


  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row d-flex justify-content-center pt-50 pb-50">
        <div class="col-12 col-lg-5">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

</main>
{{/base/base }}
