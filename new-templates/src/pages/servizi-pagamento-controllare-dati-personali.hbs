{{#>base/base title="Dati generali"}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Servizi scolastici"}}
        {{> cmp-heading/cmp-heading
        title="Richiesta servizio mensa scolastica"
        subTitle="Inserisci le informazioni necessarie per richiedere il servizio di mensa scolastica.
        Potrai ricontrollare tutti i dati nel riepilogo, prima di inviare la richiesta."}}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=servizi-pagamento.acconsentire-trattamento-dati-inseriti.step-2
        step-num="2"
        step-title="Dati generali"
        step-tot="4"
        }}
      </div>
    </div>
    <div class="steppers-content" aria-live="polite">
      <div class="row mt-lg-50">
        <div class="col-12 col-lg-3 mb-4 d-none d-lg-block">
          {{>cmp-navscroll/cmp-navscroll accordion-title="INFORMAZIONI RICHIESTE"
          link-list=servizi-pagamento.controllare-dati-personali.navscroll
          br-none="true"}}
        </div>
        <div class="col-12 col-lg-8 offset-lg-1">
          <div>
            {{#>cmp-card/cmp-card-content-box
            h2-class="mb-1"
            bg-grey=true
            card-title="Richiedente"
            id-title="applicant-info"
            subtitle="Informazione su di te"}}

            {{> cmp-info-button-card/cmp-info-button-card big-title="Giulia Bianchi"
            label-2="Codice Fiscale <br> <span>GLABNC72H25H501Y</span>"
            data-add="Aggiungi dati"
            show-more-anagrafica=true
            btn-label-text="Aggiungi documenti"
            collapse-id="collapse-parents"
            modalId="modal-documents"}}
            {{/cmp-card/cmp-card-content-box}}
          </div>

          <div class="mt-4">
            {{#>cmp-card/cmp-card-content-box bg-grey=true
            card-title="Beneficiario"
            id-title="beneficiary-info"
            subtitle="Informazioni sulla persona che utilizzerà il servizio"}}
            {{> cmp-info-button-card/cmp-info-button-card radio=true group="beneficiaries" idRadio="son"
            big-title="Francesco Rossi"
            label-2="Codice Fiscale <br> <span>FRARSS72H25H501Y</span>"
            data-add="Aggiungi dati"
            show-more-anagrafica-3=true
            anagrafica=servizi-pagamento.controllare-dati-personali.anagrafica
            indirizzo=servizi-pagamento.controllare-dati-personali.indirizzo
            documenti=servizi-pagamento.controllare-dati-personali.documenti
            btnDocumenti=true
            btn-label-text="Aggiungi documenti"
            collapse-id="collapse-benef-1"
            modalId="modal-documents"}}

            {{> cmp-info-button-card/cmp-info-button-card radio=true group="beneficiaries" idRadio="daughter"
            big-title="Lucia Rossi" label-2="Codice Fiscale <br> <span>LCARSS72H25H501Y</span>"
            data-add="Aggiungi dati"
            show-more-anagrafica="true"
            collapse-id="collapse-benef-2"
            modalId="modal-documents"}}

            {{>partials/button/button label="Aggiungi beneficiario" link="true"
            icon-url="./assets/bootstrap-italia/dist/svg/sprite.svg#it-close-circle"
            icon-class="plus-icon icon-primary"
            class="plus-text mt-30"}}
            {{/cmp-card/cmp-card-content-box}}
          </div>

          <div class="mt-4">
            {{#>cmp-card/cmp-card-content-box bg-grey=true
            card-title="ISEE"
            id-title="isee-info"
            subtitle="Informazioni sul valore dell’ISEE del tuo nucleo familiare basato sulla tua
            ultima
            dichiarazione"}}
            {{> cmp-info-button-card/cmp-info-button-card big-title="ISEE: 18.000,00€" label-2="Scadenza ISEE <br>
            <span>01/10/2019</span>"
            data-add="Aggiungi dati"
            show-more-isee="true"
            collapse-id="collapse2"
            modalId="modal-isee"
            }}
            {{/cmp-card/cmp-card-content-box}}
          </div>
          {{>cmp-nav-steps/cmp-nav-steps save="true"
          modalId="modal-save-1"

          }}
        </div>
      </div>
    </div>
  </div>

  <div class="bg-grey-card">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 py-5">
          {{>cmp-contacts/cmp-contacts appuntamento=true}}
        </div>
      </div>
    </div>
  </div>
  {{>cmp-modal/modal-documents
            label1-text="Certificato disabilità"
            label1-id="doc-dis"
            document1="francesco_rossi_certificat..."
            label2-text="Certificato dieta patologica"
            label2-id="doc-diet"
            document2="francesco_rossi_dieta.pdf"}}

  {{>cmp-modal/modal-isee}}

  {{>cmp-modal/modal-save}}
</main>
{{/base/base }}