{{#>base/base title="Archetipo: Pagamenti dovuti"}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Pagamenti"}}
        {{> cmp-heading/cmp-heading
        title="Pagamento multa"
        subTitle="Inserisci le informazioni necessarie per il pagamento della multa. Potrai ricontrollare tutti i dati nel riepilogo, prima di effettuare il pagamento."
        }}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=pagamenti-dovuti-multa.info-progress.step-2
        step-num="2"
        step-tot="4"
        step-title="Dati generali"
        subtitle="I campi contraddistinti dal simbolo asterisco (*) sono obbligatori"
        }}
      </div>
    </div>
    <div class="steppers-content" aria-live="polite">
      <div class="row justify-content-center mt-lg-50">
        {{!-- <div class="col-12 col-lg-3 mb-4 d-none d-lg-block">
          {{>cmp-navscroll/cmp-navscroll accordion-title="INFORMAZIONI RICHIESTE"
            link-list=pagamenti-dovuti-multa.controllare-dati-personali.navscroll
            br-none="true"
          }}
        </div> --}}
        <div class="col-12 col-lg-8">
          <div>
            {{#>cmp-card/cmp-card-content-box
              class="p-big"
              bg-grey=true
              h2-class="mb-0"
              card-title="Effettuato da"
              subtitle="Informazioni sulla persona che effettua il pagamento, che puÃ² essere diversa da chi ha ricevuto la multa."
            }}
               {{> cmp-info-button-card/cmp-info-button-card group="beneficiaries"
                  big-title="Giulia Rossi"
                  label-2="Codice Fiscale <br> <span>GLABNC72H25H501Y</span>"
                  data-add="Aggiungi dati"
                  show-more-anagrafica-3="true"
                  info-anagrafica=pagamenti-dovuti-multa.controllare-dati-personali.anagrafica
                  info-indirizzi=pagamenti-dovuti-multa.controllare-dati-personali.indirizzi
                  anagrafica-indirizzo=true
                  collapse-id="collapse-benef-1"
                  modalId="modal-documents"
                  disservizio-page=true
               }}
            {{/cmp-card/cmp-card-content-box}}
          </div>
          </div>
          {{>cmp-nav-steps/cmp-nav-steps save="true"
          modalId="modal-save-1"

          }}
        </div>
      </div>
    </div>
  </div>

  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>
  {{>cmp-modal/modal-documents}}

  {{>cmp-modal/modal-isee}}

