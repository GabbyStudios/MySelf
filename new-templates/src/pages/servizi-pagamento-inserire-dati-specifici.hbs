{{#>base/base title="Preferenze di Servizio"}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Servizi scolastici"}}
        {{> cmp-heading/cmp-heading title="Richiesta servizio mensa scolastica"}}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=servizi-pagamento.acconsentire-trattamento-dati-inseriti.step-3
        step-num="3"
        step-title="Preferenze di Servizio"
        step-tot="4"
        }}
      </div>
    </div>

    <div class="row mt-lg-50">
      <div class="col-12 col-lg-3 d-lg-block mb-4 d-none ">
          {{>cmp-navscroll/cmp-navscroll
          accordion-title="INFORMAZIONI RICHIESTE"
          link-list=servizi-pagamento.inserire-dati-specifici.navscroll}}
      </div>
      <div class="col-12 col-lg-8 offset-lg-1">
        <div class="steppers-content" aria-live="polite">
          <div>
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="school-choice"
            bg-grey=true
            h2-class="mb-4"
            required-icon=true
            card-title="Seleziona Istituto"}}
            {{> partials/select/select placeholder="Seleziona opzione" select-option-list=inserire-dati-specifici}}
            {{/cmp-card/cmp-card-content-box}}
          </div>

          <div class="mt-4">
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="rate-choice"
            bg-grey=true
            h2-class="mb-1"
            required-icon=true
            card-title="Tariffa esonero"
            subtitle="Indica la tariffa di esonero a cui ha diritto il beneficiario"}}
            {{> cmp-card-radio/cmp-card-radio percentage=true id='rate'}}
            {{/cmp-card/cmp-card-content-box}}
          </div>

          <div class="mt-4">
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="outings-choice"
            bg-grey=true
            h2-class="mb-1"
            required-icon=true
            card-title="Tariffa riduzione"
            subtitle="Indica la tariffa di riduzione a cui ha diritto il beneficiario"}}
            {{> cmp-card-radio/cmp-card-radio percentage=true id='reduction'}}
            {{/cmp-card/cmp-card-content-box}}
          </div>

          <div class="mt-4">
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="outings-choice"
            bg-grey=true
            h2-class="mb-1"
            required-icon=true
            card-title="Frequenza"
            subtitle="Indica i giorni di frequenza del servizio"}}
            {{> cmp-card-radio/cmp-card-radio percentage=true frequency=true id='frequency'}}
            {{/cmp-card/cmp-card-content-box}}
          </div>

          <div class="mt-4">
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="outings-choice"
            bg-grey=true
            h2-class="mb-1"
            required-icon=true
            card-title="Dieta diversificata"
            subtitle="Indica la dieta per il beneficiario"}}
            {{> cmp-card-radio/cmp-card-radio percentage=true frequency=true diet=true id='frequency'}}
            {{/cmp-card/cmp-card-content-box}}
          </div>
          {{> cmp-nav-steps/cmp-nav-steps save="true"}}
        </div>
      </div>
    </div>
  </div>


  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row d-flex justify-content-center pt-50 pb-50">
        <div class="col-12 col-lg-5">
          {{>cmp-contacts/cmp-contacts appuntamento=true}}
        </div>
      </div>
    </div>
  </div>

</main>
{{/base/base }}
