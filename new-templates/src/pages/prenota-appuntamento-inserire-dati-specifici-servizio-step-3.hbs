{{#>base/base title="Preferenze di Servizio"}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Prenotazioni"}}
        {{> cmp-heading/cmp-heading title="Prenotazione appuntamento"}}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=step-list.prenota-appuntamento-step-3
        step-num="3"
        step-tot="5"
        step-title="Dettagli appuntamento"
        subtitle="I campi contraddistinti dal simbolo asterisco (*) sono obbligatori"
        }}
      </div>
    </div>

    <div class="row mt-lg-50">
      <div class="col-12 col-lg-3 d-lg-block mb-4 d-none ">
          {{>cmp-navscroll/cmp-navscroll
          accordion-title="INFORMAZIONI RICHIESTE"
          link-list=link-list.prenota-appuntamento-step-3}}
      </div>
      <div class="col-12 col-lg-8 offset-lg-1">
        <div class="steppers-content" aria-live="polite">
          <div>

            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="reason"
            bg-grey=true
            h2-class="mb-0"
            card-title="Motivo*"
            subtitle="Scegli il motivo dellâ€™appuntamento"
            }}
             {{>partials/select/select placeholder="Seleziona opzione" class="p-0" select-option-list=motivo-appuntamento}}
            {{/cmp-card/cmp-card-content-box}}


            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="details"
            bg-grey=true
            h2-class="mb-0"
            card-title="Dettagli*"
            subtitle="Aggiungi ulteriori dettagli"
            }}
            {{> partials/text-area/text-area label="Inserire massimo 200 caratteri" class="p-0"}}
            {{/cmp-card/cmp-card-content-box}}
          </div>
          {{> cmp-nav-steps/cmp-nav-steps save="true"}}
        </div>
      </div>
    </div>
  </div>


  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row d-flex justify-content-center pt-50 pb-50">
        <div class="col-12 col-lg-5">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

</main>
{{/base/base }}
