{{#>base/base title="Permessi e autorizzazioni - Confermare riepilogo informazioni inserite"}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Permessi mobilitÃ "}}
        {{> cmp-heading/cmp-heading title="Permesso ZTL"}}
      </div>

      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=permessi-autorizzazioni.conferma-riepilogo-informazioni.step-4
        step-num="4"
        step-title="Riepilogo"
        step-tot="4"
        }}
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">


        {{>cmp-callout/callout 
        calloutType="warning"
        icon="it-horn"
        calloutTitle="Attenzione"
        calloutText="Le informazioni che hai fornito hanno valore di dichiarazione.<br>Verifica che siano corrette."
        textClass="titillium text-paragraph"
        }}

        <h2 class="title-xxlarge mb-4 mt-40">Dati Generali</h2>

        {{#>cmp-card/cmp-card-content-box
        class="mb-0"
        bg-grey=true
        h3-title=true
        card-title="Richiedente" }}

        {{>cmp-info-summary/cmp-info-summary
        class="mt-4 mb-30 p-4"
        info-title="Mario Rossi"
        info=true
        info-list=permessi-autorizzazioni.conferma-riepilogo-informazioni.anagrafica
        }}

        {{>cmp-info-summary/cmp-info-summary
        class="mb-30 p-4"
        info-title="Indirizzo"
        info=true
        info-list=permessi-autorizzazioni.conferma-riepilogo-informazioni.indirizzo
        }}

        {{>cmp-info-summary/cmp-info-summary
        class="mb-30 p-4"
        info-title="Contatti"
        info=true
        info-list=permessi-autorizzazioni.conferma-riepilogo-informazioni.contatti
        }}

        {{>cmp-info-summary/cmp-info-summary
        class="p-4 mb-0"
        info-title="Documenti"
        info=true
        info-list=permessi-autorizzazioni.conferma-riepilogo-informazioni.documenti
        }}

        {{/cmp-card/cmp-card-content-box}}

        <div class="mt-4">
          {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          h3-title=true
          card-title="Veicolo" }}

          {{>cmp-info-summary/cmp-info-summary
          class="mt-4 mb-30 p-4"
          info-title="Mini Countryman F60"
          info=true
          info-list=permessi-autorizzazioni.conferma-riepilogo-informazioni.vehicle
          }}
          {{/cmp-card/cmp-card-content-box}}
        </div>

        <div class="mt-4">
          {{#>cmp-card/cmp-card-content-box
          class="mb-0"
          bg-grey=true
          h3-title=true
          card-title="Preferenze di servizio" }}

            {{>cmp-info-summary/cmp-info-summary
            class="mt-4 p-4"
            info=true
            info-list=permessi-autorizzazioni.conferma-riepilogo-informazioni.preferenze-servizio
            }}
          {{/cmp-card/cmp-card-content-box}}
        </div>

        {{>cmp-nav-steps/cmp-nav-steps modalId="modal-terms" }}
      </div>


    </div>
  </div>
  </div>

  <div class="bg-grey-card">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 py-5">
          {{>cmp-contacts/cmp-contacts appuntamento=true}}
        </div>
      </div>
    </div>
  </div>

  {{>cmp-modal/modal-terms-and-conditions}}
</main>
{{/base/base }}
