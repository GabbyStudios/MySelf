{{#>base/base title="Sito pubblico | Pagina vivi" headerActive4=true}}
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-12 col-lg-10">
          {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Vivere il comune" }}

          {{>cmp-hero/cmp-hero hero-title="Vivere il comune" hero-text="Tutti gli eventi, le iniziative e i luoghi
        dâ€™interesse per scoprire e vivere il territorio comunale." wrapper-class="pt-0 ps-0 pb-4 pb-lg-70"}}
        </div>
      </div>
    </div>

    <section class="hero-img mb-20 mb-lg-50">
      {{>cmp-hero-img/cmp-hero-img-small description="Colosseo, Roma. Foto di Griffin Wooldridge." img-path="roma-colosseo.png"}}
    </section>

    <div class="bg-grey-dsk">
      <div class="container p-3 p-md-5">
        <h2 class="title-xxlarge mb-40 ">Eventi in evidenza</h2>
        {{>cmp-list-card-img/cmp-list-card-img cards=cards.card-events label="Tutti gli eventi" buttonNext=true}}
      </div>
    </div>

    <div class="container p-3 p-md-5">
      <h2 class="title-xxlarge mb-40 ">Luoghi in evidenza</h2>
      {{>cmp-list-card-img/cmp-list-card-img cards=cards.card-places label="Tutti i luoghi" buttonNext=true}}
    </div>

    <div class="bg-primary">
      <div class="container">
        <div class="row d-flex justify-content-center bg-primary">
          <div class="col-12 col-lg-6 p-lg-0 px-3">
            {{>cmp-rating/cmp-rating}}
          </div>
        </div>
      </div>
    </div>

    <div class="bg-grey-card">
      <div class="container">
        <div class="row">
          <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
            {{>cmp-contacts/cmp-contacts}}
          </div>
        </div>
      </div>
    </div>
  </main>
  {{/base/base }}
