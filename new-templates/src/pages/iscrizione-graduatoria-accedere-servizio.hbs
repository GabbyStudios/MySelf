{{#>base/base title="Accedere al servizio"}}
<main>
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-10 offset-lg-1">
        {{>cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Accesso"}}
        {{>cmp-heading/cmp-heading title="Accedi" subTitle="Per accedere al sito e ai suoi servizi, utilizza una delle seguenti modalità"}}
      </div>
    </div>
   {{!--  <hr class="d-none d-lg-block mt-0 mb-2"> --}}
    <div class="row">
      <div class="col-12 col-lg-8 offset-lg-2">
        {{#>cmp-text-button/cmp-text-button
          cardTitle="SPID"
          cardDescription="Accedi con SPID, il sistema Pubblico di Identità Digitale."
          linkLabel="Come attivare SPID"
          class="mb-2"
          classLink="u-main-primary"
          textBtnClass="mt-lg-100 mt-3"
        }}
          {{>partials/button/button label="Entra con SPID" primary=true class="btn-icon btn-re square"  iconBtnUrl="../images/spid.svg"}}
        {{/cmp-text-button/cmp-text-button}}

        {{#>cmp-text-button/cmp-text-button
          cardTitle="CIE"
          cardDescription="Accedi con la tua Carta d’Identità Elettronica."
          linkLabel="Come richiedere CIE"
          class="mb-2"
          classLink="u-main-primary"
        }}
          {{>partials/button/button label="Entra con CIE" primary=true class="btn-icon btn-re square" iconBtnUrl="../images/cie.svg"}}
        {{/cmp-text-button/cmp-text-button}}

        {{#>cmp-text-button/cmp-text-button
          cardTitle="Altre utenze"
          cardDescription="In alternativa puoi utilizzare le seguenti modalità."
          class="d-md-flex"
        }}
          {{>partials/button/button label="Accedi con ID azienda" outline-primary=true class="btn-re pr-md-4"}}
          {{>partials/button/button label="Accedi come dipendente" outline-primary=true class="btn-re"}}
        {{/cmp-text-button/cmp-text-button}}
      </div>
    </div>
  </div>
  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>
</main>
{{/base/base }}
