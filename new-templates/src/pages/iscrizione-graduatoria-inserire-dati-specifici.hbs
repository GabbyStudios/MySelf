{{#>base/base title="Preferenze di Servizio" headerActive3=true}}
<main>
  <div class="container" id="main-container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Iscrizioni"}}
        {{> cmp-heading/cmp-heading 
        title="Iscrizione alla scuola dell'infanzia"
        description="Hai bisogno di assistenza? <a href='#' class='title-small-semi-bold t-primary' aria-label='Vai alla pagina contatti per richiedere assistenza' title='Vai alla pagina contatti per richiedere assistenza'>Contattaci</a>"
        }}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=iscrizione-graduatoria.info-progress.step-3
        step-num="3"
        step-title="Preferenze di Servizio"
        step-tot="4"
        }}
      </div>
    </div>

    <div class="row">
      <div class="col-12 col-lg-3 d-lg-block mb-4 d-none ">
          {{>cmp-navscroll/cmp-navscroll
          accordion-title="INFORMAZIONI RICHIESTE"
          link-list=link-list.links-preferenze-servizio-page}}
      </div>
      <div class="col-12 col-lg-8 offset-lg-1 mt-2 mt-lg-0">
        <div class="steppers-content" aria-live="polite">
  
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="school-choice"
            bg-grey=true
            h2-class="mb-0"
            margin-class="mb-40"
            required-icon=true
            card-title="Seleziona Istituto"}}
            {{> partials/select/select placeholder="Scegli un'opzione" label-text="Seleziona Istituto" id="school-option" label-hidden=true select-option-list=inserire-dati-specifici}}
            {{/cmp-card/cmp-card-content-box}}

            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="religion-choice"
            bg-grey=true
            h2-class="mb-0"
            margin-class="mb-40"
            required-icon=true
            card-title="Religione cattolica"
            subtitle="Vuoi avvalerti dell'insegnamento della
            religione cattolica?"}}
            {{> cmp-card-radio/cmp-card-radio id='religione'}}
            {{/cmp-card/cmp-card-content-box}}
  
            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="outings-choice"
            bg-grey=true
            h2-class="mb-1"
            margin-class="mb-40"
            required-icon=true
            card-title="Uscite didattiche"
            subtitle="Autorizzi le uscite didattiche?"}}
            {{> cmp-card-radio/cmp-card-radio id='uscite'}}
            {{/cmp-card/cmp-card-content-box}}

            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="media-choice"
            bg-grey=true
            h2-class="mb-1"
            margin-class="mb-40"
            required-icon=true
            card-title="Riprese multimediali"
            subtitle="Autorizzi la scuola a produrre e utilizzare foto e video in cui compare tua figlia o tuo figlio?"}}
            {{> cmp-card-radio/cmp-card-radio id='multimedia'}}
            {{/cmp-card/cmp-card-content-box}}
            
          {{> cmp-nav-steps/cmp-nav-steps save="true" saveBtn=true}}
        </div>
      </div>
    </div>
  </div>


  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row d-flex justify-content-center p-contacts">
        <div class="col-12 col-lg-5">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

</main>
{{/base/base }}
