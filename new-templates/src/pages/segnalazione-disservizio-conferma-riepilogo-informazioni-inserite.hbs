{{#>base/base title="Riepilogo"}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Segnalazione disservizio"}}
        {{> cmp-heading/cmp-heading title="Segnalazione disservizio"}}
      </div>

      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=step-list.disservizio-step-3
        step-num="3"
        step-title="Riepilogo"
        step-tot="3"
        }}
      </div>
    </div>

    <div class="row justify-content-center">
      <div class="col-12 col-lg-8">

        {{>cmp-icon-card/cmp-icon-card
        icon-color="icon-notice"
        title-class="text-notice text-uppercase title-medium-bold mb-4"
        notice-card=true
        icon="it-horn"
        card-title="Attenzione"
        description="Le informazioni che hai fornito hanno valore di dichiarazione. <br> Verifica che siano corrette."}}

        <h2 class="title-xxlarge mb-4 mt-40">Segnalazione</h2>

        {{#>cmp-card/cmp-card-content-box
        class="mb-0"
        bg-grey=true
        h3-title=true
        card-title="Disservizio" }}

        {{>cmp-info-summary/cmp-info-summary
        class="mt-4 mb-30 p-4"
        info=true
        info-list=disservizio-info.list
        }}


        {{/cmp-card/cmp-card-content-box}}

        <h2 class="title-xxlarge mb-4 mt-40">Dati Generali</h2>

        {{#>cmp-card/cmp-card-content-box
        class="mb-0"
        bg-grey=true
        h3-title=true
        card-title="Autore della<br/> segnalazione" }}

        {{>cmp-info-summary/cmp-info-summary
        class="mt-4 mb-30 p-4"
        info-title="Giulia Bianchi"
        info=true
        info-list=disservizio-info.info-author
        }}

        {{>cmp-info-summary/cmp-info-summary
        class="mb-30 p-4"
        info-title="Contatti"
        info=true
        info-list=disservizio-info.info-contacts

        }}

        {{/cmp-card/cmp-card-content-box}}

        {{>cmp-nav-steps/cmp-nav-steps modalId="modal-terms" }}
      </div>
    </div>
  </div>
  </div>

  <div class="bg-grey-card">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 py-5">
          {{>cmp-contacts/cmp-contacts disservizio=true appuntamento=true}}
        </div>
      </div>
    </div>
  </div>

  {{>cmp-modal/modal-terms-and-conditions}}
</main>
{{/base/base }}
