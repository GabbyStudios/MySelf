{{#>base/base title="Segnalazione disservizio | Finalizzare procedura"}}
<main>
  <div class="container">
    <div class="row">
      <div class="col-12">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Segnalazione disservizio"}}
      </div>
    </div>
    <div class="section-request">
      <div class="row">
        <div class="col-12 col-lg-10 offset-lg-1">
         {{>cmp-heading/cmp-heading
          title="Segnalazione inviata"
          btnClass="mt-3"
          iconTitle="it-check-circle"
          iconClass="mr-10 icon-sm mb-1"
          subTitle="Grazie, abbiamo ricevuto la tua <strong>segnalazione AN4059281.</strong>  Sarà visibile sulla <a href='#' class='t-primary'> lista di tutte segnalazioni</a> una volta presa in carico dall’amministrazione. </p><p class='subtitle-small pt-3 pt-lg-4 d-lg-flex flex-column'>Abbiamo inviato il riepilogo all’email:<strong> giulia.bianchi@gmail.com</strong>"
          button=true
          label="Scarica la ricevuta (PDF 100KB)"
          outline-primary=true
          iconBtn="it-download"
          sm=true
          }}
          <p class="mt-4 mt-lg-3">
          <a href="#" class="t-primary text-paragraph underline">Consulta la richiesta </a>
          <span class="text-paragraph">nella tua area riservata</span>

          </p>
        </div>
      </div>
      <hr class="d-none d-lg-block mt-40 mb-0">
      <div class="row justify-content-center mb-3 mb-md-5">

        <div class="col-12 col-lg-8">
           {{>cmp-icon-list/cmp-icon-list
           title="Servizi correlati"
           titleClass="mb-lg-4"
           id-title="related-service"
           icon-list=servizi-pagamento.finalizzare-procedura.servizi-correlati-disservizio
           }}
        </div>
      </div>
    </div>
  </div>

  <div class="bg-primary">
    <div class="container">
      <div class="row d-flex justify-content-center bg-primary">
          <div class="col-12 col-lg-6 p-lg-0 px-3">
          {{>cmp-rating/cmp-rating}}
          </div>
        </div>
    </div>
  </div>

   <div class="bg-grey-card">
    <div class="container">
      <div class="row">
        <div class="col-12 col-lg-6 offset-lg-3 p-contacts">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>
</main>
{{/base/base }}
