{{#>base/base title="Preferenze di Servizio"}}
<main>
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-10">
        {{> cmp-breadcrumbs/cmp-breadcrumbs link1="Home" link2="Servizi" link3="Prenotazioni"}}
        {{> cmp-heading/cmp-heading title="Prenotazione appuntamento"}}
      </div>
      <div class="col-12">
        {{> cmp-info-progress/cmp-info-progress
        step-list=step-list.prenota-appuntamento-step-2
        step-num="2"
        step-tot="5"
        step-title="Data e orario"
        subtitle="I campi contraddistinti dal simbolo asterisco (*) sono obbligatori"
        }}
      </div>
    </div>

    <div class="row mt-lg-50">
      <div class="col-12 col-lg-3 d-lg-block mb-4 d-none ">
          {{>cmp-navscroll/cmp-navscroll
          accordion-title="INFORMAZIONI RICHIESTE"
          link-list=link-list.prenota-appuntamento-step-2}}
      </div>
      <div class="col-12 col-lg-8 offset-lg-1">
        <div class="steppers-content" aria-live="polite">
          <div>

            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="appointment-available"
            bg-grey=true
            h2-class="mb-0"
            card-title="Appuntamenti disponibili*"
            }}
            {{>cmp-tab/cmp-tab}}
            {{/cmp-card/cmp-card-content-box}}


            {{#>cmp-card/cmp-card-content-box
            class="p-big"
            id-title="office"
            bg-grey=true
            h2-class="mb-0"
            card-title="Ufficio"
            }}
            {{> cmp-info-radio/cmp-info-radio group="beneficiaries" idRadio="first"
            title="Municipalit√† 1 - Chiaia, Posillipo, S. Ferdinando"
            info-appointment=inserire-dati-specifici-appuntamento.info
            }}
            {{/cmp-card/cmp-card-content-box}}
          </div>
          {{> cmp-nav-steps/cmp-nav-steps save="true"}}
        </div>
      </div>
    </div>
  </div>


  <div class="bg-grey-card shadow-contacts">
    <div class="container">
      <div class="row d-flex justify-content-center p-contacts">
        <div class="col-12 col-lg-5">
          {{>cmp-contacts/cmp-contacts}}
        </div>
      </div>
    </div>
  </div>

</main>
{{/base/base }}
