<div class="card-teaser card-teaser-image card-flex rounded border border-light{{#if arguments-card}} arguments-card{{/if}}">
  <div class="card-body d-flex justify-content-between">
    <div class="teaser-content">
      <div class="category-top">
        <a class="text-decoration-none fw-semibold" href="#">{{category}}</a>
      </div>
      <h4 class="text-paragraph-medium ">
        <a href="#" class="text-decoration-none">{{title}}</a>
      </h4>
      <p class="m-0 u-grey-light text-paragraph-card">{{description}}</p>
    </div>
    {{#if image}}
    <div class="card-image">
      <img src="{{image}}" alt="Immagine di esempio" />
    </div>
    {{/if}}
  </div>
</div>